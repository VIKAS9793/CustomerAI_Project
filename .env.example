# Application Settings
APP_NAME=CustomerAI
APP_VERSION=1.3.0
ENVIRONMENT=development

# Database Configuration
SENTIMENT_DB_URL=postgres://username:password@sentiment-db:5432/sentiment
SENTIMENT_DB_USER=postgres
SENTIMENT_DB_PASSWORD=secure_password
SENTIMENT_DB_NAME=sentiment

# Redis Configuration
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=secure_password

# API Gateway Configuration
API_GATEWAY_PORT=8000
API_RATE_LIMIT=100
API_RATE_WINDOW=15m

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret
JWT_EXPIRY=1h
JWT_REFRESH_EXPIRY=7d

# Service Ports
AUTH_SERVICE_PORT=3001
SENTIMENT_SERVICE_PORT=3002
RESPONSE_SERVICE_PORT=3003
PRIVACY_SERVICE_PORT=3004

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
PROMETHEUS_ENABLED=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database
DB_TYPE=dynamodb
DB_REGION=us-west-2
DB_TABLE_PREFIX=customerai_

# AI Model Settings
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Security Configuration
JWT_SECRET_KEY=your-secret-key-here  # Required: JWT secret key for token signing
JWT_ALGORITHM=HS256                 # JWT signing algorithm
JWT_EXPIRE_MINUTES=30               # Token expiration time in minutes

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/customerai  # Database connection URL

# Cloud Services Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key      # AWS access key ID
AWS_SECRET_ACCESS_KEY=your-aws-secret-key  # AWS secret access key
AWS_REGION=us-east-1                      # AWS region

# API Keys
OPENAI_API_KEY=your-openai-api-key  # OpenAI API key
ANTHROPIC_API_KEY=your-anthropic-api-key  # Anthropic API key

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,https://your-domain.com  # Allowed origins for CORS

# Logging Configuration
LOG_LEVEL=INFO  # Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_FILE=customerai.log  # Log file path

# Security Headers
SECURITY_HEADERS_X_CONTENT_TYPE_OPTIONS=nosniff
SECURITY_HEADERS_X_FRAME_OPTIONS=DENY
SECURITY_HEADERS_X_XSS_PROTECTION=1; mode=block
SECURITY_HEADERS_STRICT_TRANSPORT_SECURITY=max-age=31536000; includeSubDomains
SECURITY_HEADERS_CONTENT_SECURITY_POLICY=default-src 'self'; script-src 'self' 'unsafe-inline';

# Rate Limiting
RATE_LIMIT_REQUESTS=100  # Maximum requests per time window
RATE_LIMIT_WINDOW_SECONDS=60  # Time window in seconds

# Input Validation
MAX_INPUT_LENGTH=1000  # Maximum input length
ALLOWED_CONTENT_TYPES=application/json,text/plain  # Allowed content types

# File Upload
MAX_FILE_SIZE_MB=10  # Maximum file size in MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf,text/csv  # Allowed file types

# Security
ENCRYPTION_KEY=your_encryption_key
KEY_ROTATION_DAYS=30

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO
LOG_FORMAT=json

# Database
DB_TYPE=dynamodb
DB_REGION=us-west-2
DB_TABLE_PREFIX=customerai_

# Security
ENCRYPTION_KEY=your_encryption_key
KEY_ROTATION_DAYS=30

# Compliance
GDPR_ENABLED=true
CCPA_ENABLED=true
